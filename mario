using System;

class Program
{
    static void Main()
    {
        // Set up the console
        Console.Title = "Mini Mario";
        Console.WindowHeight = 20;
        Console.WindowWidth = 30;

        // Draw Mario
        Console.SetCursorPosition(10, 14);
        Console.WriteLine("  M");
        Console.SetCursorPosition(10, 15);
        Console.WriteLine("MMM");
        Console.SetCursorPosition(10, 16);
        Console.WriteLine(" M ");

        // Draw blocks
        for (int i = 0; i < 5; i++)
        {
            Console.SetCursorPosition(2 + i * 4, 12);
            Console.Write("[]");
        }

        // Keep the console window open
        Console.ReadLine();
    }
}
